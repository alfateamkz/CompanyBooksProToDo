@using CompanyBooksProToDo.Helpers
@{
    ViewData["Title"] = LocalizationHelper.GetLocalizedWord("Edit");
}

<div class="content">
    <form action="" method="post">
        <div class="row">
            <div class="dateandtime">
                <div class="title">@LocalizationHelper.GetLocalizedWord("Time")</div>
                <div class="time" id="time"></div>
                <script>
                    var time = setInterval(function () {
                        var date = new Date();
                        document.getElementById("time").innerHTML = (('0' + date.getDate()).slice(-2) + "/" + ('0' + date.getMonth()).slice(-2) + "/" + date.getFullYear() + " " + ('0' + date.getHours()).slice(-2) + ":" + ('0' + date.getMinutes()).slice(-2) + ":" + ('0' + date.getSeconds()).slice(-2));
                    }, 1000);
                </script>
            </div>
        </div>

        <div class="row marginmobile">
            <div class="col-md-3">
                <div class="mb-3">
                    <label class="form-label">@LocalizationHelper.GetLocalizedWord("Item")</label>
                    <select class="form-select">
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="row marginmobile">
            <div class="col-md-3">
                <div class="mb-3">
                    <label class="form-label">@LocalizationHelper.GetLocalizedWord("Opened at")</label>
                    <input type="date" class="form-control" placeholder="@LocalizationHelper.GetLocalizedWord("Select date")">
                </div>
            </div>

            <div class="col-md-3">
                <div class="mb-3">
                    <label class="form-label">@LocalizationHelper.GetLocalizedWord("Weekday")</label>
                    <select class="form-select">
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                    </select>

                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="">
                        <label class="form-check-label">
                            @LocalizationHelper.GetLocalizedWord("Task is closed")
                        </label>
                    </div>
                </div>
            </div>
        </div>

        <div class="row marginmobile">
            <div class="col-md-2">
                <div class="mb-3">
                    <label class="form-label">@LocalizationHelper.GetLocalizedWord("Start time")</label>
                    <input type="time" class="form-control" placeholder="@LocalizationHelper.GetLocalizedWord("Select date")">
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="">
                    <label class="form-check-label">
                        @LocalizationHelper.GetLocalizedWord("Opened")
                    </label>
                </div>
            </div>

            <div class="col-md-2">
                <div class="mb-3">
                    <label class="form-label"> @LocalizationHelper.GetLocalizedWord("End time")</label>
                    <input type="time" class="form-control" placeholder="@LocalizationHelper.GetLocalizedWord("Select date")">
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="">
                    <label class="form-check-label">
                        Closed
                    </label>
                </div>
            </div>
        </div>

        <div class="row marginmobile">
            <div class="col-md-3">
                <div class="mb-3">
                    <input class="form-check-input" type="checkbox" value="">
                    <label class="form-label">@LocalizationHelper.GetLocalizedWord("Task destination")</label>
                    <input type="date" class="form-control" placeholder="@LocalizationHelper.GetLocalizedWord("Select date")">
                </div>
            </div>

            <div class="col-md-3">
                <div class="mb-3">
                    <input class="form-check-input" type="checkbox" value="">
                    <label class="form-label">@LocalizationHelper.GetLocalizedWord("Have reminder")</label>
                    <input type="date" class="form-control" placeholder="@LocalizationHelper.GetLocalizedWord("Select date")">
                </div>
            </div>
        </div>

        <div class="row marginmobile">
            <div class="col-md-3">
                <div class="mb-3">
                    <label class="form-label">@LocalizationHelper.GetLocalizedWord("Description 1")</label>
                    <textarea class="form-control" rows="2"></textarea>
                </div>
            </div>

            <div class="col-md-3">
                <div class="mb-3">
                    <label class="form-label">@LocalizationHelper.GetLocalizedWord("Description 2")</label>
                    <textarea class="form-control" rows="2"></textarea>
                </div>
            </div>
        </div>

        <div class="row marginmobile">
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">@LocalizationHelper.GetLocalizedWord("Description 3")</label>
                    <textarea class="form-control" rows="2"></textarea>
                </div>
            </div>
        </div>

        <div class="button-element">
            <button type="button" class="btn btn-success">@LocalizationHelper.GetLocalizedWord("Cancel")</button>
            <button type="button" class="btn btn-success">@LocalizationHelper.GetLocalizedWord("OK")</button>
        </div>
    </form>
</div>
